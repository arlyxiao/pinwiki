.p
  = link_to '创建新页面', '/wiki/new'
  = link_to 'Wiki列表', '/wiki'
  

.new-page

  = flash.now[:error]
  
  = form_for @wiki_page, :url => { :action => "create" } do |f|
    .field
      %label.need 页面标题
      = f.text_field :title
      
    .field
      %label.need 内容
      %textarea{:name=>'wiki_page[content]'}
      
      .field
        %a.form-submit-button{:href=>'javascript:;'} 发送